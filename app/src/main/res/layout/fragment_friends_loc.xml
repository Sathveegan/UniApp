<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.uni.uniapp.ui.FriendsLocFragment"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="18">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date :"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="textStart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Date"
            android:layout_weight="1"
            android:id="@+id/floaction_date">

        </TextView>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time :"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="textStart"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Time"
            android:layout_weight="1"
            android:id="@+id/floaction_time">
        </TextView>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location :"
            android:layout_weight="2"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:paddingBottom="5dp"/>

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/floaction_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="5"/>

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact :"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="textStart"/>

        <TextView
            android:id="@+id/floaction_contact"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Call"
                android:id="@+id/floaction_call"
                android:background="@color/colorPrimary"
                android:textColor="@color/primaryText"
                android:layout_weight="1"
                android:textSize="18sp"/>

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Message"
                android:id="@+id/floaction_message"
                android:background="@color/colorPrimary"
                android:textColor="@color/primaryText"
                android:layout_weight="1"
                android:textSize="18sp"/>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
